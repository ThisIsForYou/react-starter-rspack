{
  "name": "react-starter-rspack",
  "version": "0.0.1",
  "description": "quickstart boilerplate for react using typescript/rspack.",
  "keywords": [
    "react",
    "components",
    "rspack"
  ],
  "homepage": "https://examples-hub.github.io/react-starter-rspack",
  "license": "MIT",
  "author": "jinyaoo <jinyaoo@qq.com>",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "// storybook": "echo 'TODO start-storybook wip'",
    "build": "npm run clean && npm run build:prod",
    "build11": "npm run build:types && npm run build:js",
    "build:dev": "cross-env REACT_APP_ENV=react rspack -c ./webpacker/rspack.config.demo.mjs",
    "build:prod": "cross-env REACT_APP_ENV=react NODE_ENV=production rspack -c ./webpacker/rspack.config.prod.mjs",
    "build:prod-esm": "cross-env REACT_APP_ENV=react NODE_ENV=production rspack -c ./webpacker/rspack.config.prod.esm.mjs",
    "build:types": "tsc --emitDeclarationOnly",
    "clean": "rimraf build dist",
    "demo": "cross-env REACT_APP_ENV=reacthot rspack serve -c ./webpacker/rspack.config.demo.mjs",
    "dev": "npm run demo",
    "format": "prettier \"**/*.{js,jsx,ts,tsx,mjs,mts,json}\" --write",
    "format:check": "npm run formatter -- --check",
    "help": "echo 'exec npm start to view the demo'",
    "lint": "eslint src --ext .ts,.tsx --fix -o eslint-log.log",
    "start": "npm run demo",
    "test": "cross-env REACT_APP_ENV=react jest --config ./jest.config.js",
    "type-check": "tsc --noEmit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format"
    }
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "not IE_Mob 11"
  ],
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@rspack/cli": "^0.5.4",
    "@rspack/core": "^0.5.4",
    "@rspack/plugin-react-refresh": "^0.5.4",
    "@swc/helpers": "^0.5.6",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.58",
    "@types/react-dom": "^18.2.19",
    "@types/react-test-renderer": "^18.0.7",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "clean-webpack-plugin": "^4.0.0",
    "core-js": "^3.36.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.10.0",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "global-jsdom": "^24.0.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-transform-stub": "^2.0.0",
    "jsdom": "^24.0.0",
    "node-polyfill-webpack-plugin": "^3.0.0",
    "oxlint": "^0.2.10",
    "prettier": "^3.2.5",
    "react-refresh": "^0.14.0",
    "react-test-renderer": "^18.2.0",
    "rimraf": "^5.0.5",
    "sass": "^1.71.1",
    "sass-loader": "^14.1.1",
    "source-map-loader": "^5.0.0",
    "source-map-support": "^0.5.21",
    "style-loader": "^3.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "webpack-merge": "^5.10.0"
  }
}
